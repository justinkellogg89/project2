{{!-- <!DOCTYPE html>
<html lang="en"> --}}

<head>
  <title>Wild Kards</title>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  {{!-- <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootswatch/3.3.7/lumen/bootstrap.min.css"> --}}
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
    integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
  <link href="stylesheets/style.css" rel="stylesheet">
</head>

<body>
  <div class="container">
    {{!-- <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h2 style="text-align: center;">Welcome <span class="member-name"></span></h2>
      </div>
    </div> --}}
    <br>
    <div class="row"> {{!-- justify-content-md-center"> --}}
      <div class="col-md-6 offset-md-2">   
        <form id="cms">
          <div class="form-group">
            <label for="body">
              <h4>Quote:</h4>
            </label>
            <textarea placeholder="Quote text" class="form-control" rows="5" id="body"></textarea>
            <div class="form-group">
              <label for="category">Select Kard:</label>
              <select class="custom-select" id="author">
              </select>
            </div>
            <button type="submit" class="btn btn-success submit">Submit</button>
          </div>
        </form>
      </div>
    </div>
    <br />
    <div class="row row-cols-1 row-cols-md-2">
      {{#each quotes}}
      <div class="col mb-4">
        <div class="card h-100">
          <div class="card-body">
            <p class="card-title">Quote by <span style="font-size:x-large">{{ author }}</span></p>
            <p class="card-text" style="font-weight:bold">{{ body }}</p>
            <a href="/quote/{{id}}">View Comments</a>
          </div>
        </div>
      </div>
      {{/each }}
    </div>
  </div>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
  <script type="text/javascript" src="js/members.js"></script>